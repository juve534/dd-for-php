{
    "name": "juve534/dd-for-php",
    "description": "Datadog  api library for php is unofficial",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "juve534",
            "email": "maxim_4141.rock@zoho.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Juve534\\Datadog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "scripts": {
        "cs-check": [
            "@php ./vendor/bin/php-cs-fixer fix --dry-run --diff --ansi"
        ],
        "cs-fix": [
            "@php ./vendor/bin/php-cs-fixer fix"
        ]
    }
}
